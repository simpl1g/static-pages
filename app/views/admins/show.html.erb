<% content_for(:title) { 'Show' } %>
<%- model_class = Admin -%>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nick) %>:</strong></dt>
  <dd><%= @admin.nick %></dd>
</dl>

<table class="table table-striped">
  <thead>
  <tr>
    <th> Gravatar</th>
    <th> Name</th>
    <th> Email</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <% @participants.each do |participant| %>
      <tr>
        <td><%= image_tag link_to_gravatar participant.email, 50 %></td>
        <td><%= participant.name %></td>
        <td><%= participant.email %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Delete', participant, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger' %></td>
      </tr>
  <% end %>
</table>

<div class="form-actions">
  <%= link_to 'New participant', new_participant_path(@album), :class => 'btn' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admins_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_path(@admin), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_path(@admin),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
