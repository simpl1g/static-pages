<% content_for(:title) { 'Login' } %>
<%= form_tag controller: "admins", action: "do_login", :html => { :class => 'form-horizontal' } do %>
    <div class="control-group">
      <%= label_tag :nick, "Nick", :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :nick, "", :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag :password, "Password", :class => 'control-label' %>
      <div class="controls">
        <%= password_field_tag :password, "", :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag "Login", :class => 'btn btn-primary' %>
    </div>
<% end %>